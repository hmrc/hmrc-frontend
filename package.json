{
  "name": "hmrc-frontend",
  "version": "1.1.1",
  "description": "Design patterns for HMRC frontends",
  "scripts": {
    "start": "gulp dev",
    "build:package": "npm test && gulp build:package --destination 'package' && npm run test:build:package",
    "build:dist": "npm test && gulp build:dist --destination 'dist' && npm run test:build:dist",
    "test": "standard && gulp test && gulp copy-assets && jest --testPathIgnorePatterns='after-*'",
    "test:build:package": "jest tasks/gulp/__tests__/after-build-package.test.js",
    "test:build:dist": "jest tasks/gulp/__tests__/after-build-dist.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmrc/hmrc-frontend.git"
  },
  "keywords": [
    "HMRC",
    "frontend",
    "design patterns"
  ],
  "author": {
    "name": "HM Revenue and Customs",
    "email": "service-design-tools@digital.hmrc.gov.uk"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hmrc/hmrc-frontend/issues"
  },
  "homepage": "https://github.com/hmrc/hmrc-frontend#readme",
  "dependencies": {
    "govuk-frontend": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "cheerio": "^1.0.0-rc.3",
    "cssnano": "^4.1.10",
    "del": "^3.0.0",
    "express": "^4.17.1",
    "gulp": "^3.9.1",
    "gulp-better-rollup": "^3.4.0",
    "gulp-eol": "^0.2.0",
    "gulp-filter": "^5.1.0",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-lint": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "html5shiv": "^3.7.3",
    "jest": "^23.6.0",
    "jest-axe": "^3.2.0",
    "jest-serializer-html": "^5.0.0",
    "js-yaml": "^3.13.1",
    "merge-stream": "^1.0.1",
    "nodemon": "^1.19.1",
    "nunjucks": "^3.2.0",
    "oldie": "^1.3.0",
    "postcss-pseudo-classes": "^0.2.0",
    "postcss-scss": "^2.0.0",
    "puppeteer": "^1.19.0",
    "recursive-readdir": "^2.2.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "run-sequence": "^2.2.1",
    "sassdoc": "^2.7.0",
    "standard": "^11.0.1",
    "vinyl-paths": "^2.1.0",
    "yargs": "^12.0.5"
  },
  "browserslist": [
    "last 2 versions",
    "ie 8",
    "ie 9",
    "iOS 9"
  ],
  "standard": {
    "ignore": [
      "/dist/**/*.js",
      "/package/**/*.js",
      "/src/vendor/polyfills/**/*.js"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./config/jest-setup.js",
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "globalSetup": "./lib/puppeteer/setup.js",
    "globalTeardown": "./lib/puppeteer/teardown.js"
  }
}
