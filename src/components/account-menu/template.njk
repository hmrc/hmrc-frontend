{% set language = params.language | default('en') %}
{% from "../notification-badge/macro.njk" import hmrcNotificationBadge %}

<!-- ACCOUNT MENU -->
<nav id="secondary-nav" class="hmrc-account-menu" aria-label="Account" data-module="hmrc-account-menu">
  <a href="{{ params.accountHome.href | default('#') }}" class="hmrc-account-menu__link hmrc-account-menu__link--home{% if params.accountHome.active %} hmrc-account-menu__link--active{% endif %}">
    <span class="hmrc-account-icon hmrc-account-icon--home">
      {% if language == 'cy' %}Hafan y cyfrif{% else %}Account home{% endif %}
    </span>
  </a>

  <button class="hmrc-account-menu__link hmrc-account-menu__link--menu hmrc-account-menu__account-menu js-hidden js-visible" tabindex="-1" aria-hidden="true" aria-expanded="false">
    {% if language == 'cy' %}Dewislen y cyfrif{% else %}Account menu{% endif %}
  </button>

  <ul class="hmrc-account-menu__main js-hidden">
    <li class="hmrc-account-menu__link--back hidden" aria-hidden="true">
      <a href="#" tabindex="-1" class="hmrc-account-menu__link">
        {% if language == 'cy' %}Yn Ã´l{% else %}Back{% endif %}
      </a>
    </li>

    <li>
      <a href="{{ params.messages.href | default('#') }}" class="hmrc-account-menu__link{% if params.messages.active %} hmrc-account-menu__link--active{% endif %}">
        {% if language == 'cy' %}Negeseuon{% else %}Messages{% endif %}
        {% if params.messages.messageCount -%}
        {{ hmrcNotificationBadge({ text: params.messages.messageCount }) }}
        {%- endif -%}
      </a>
    </li>

    <li>
      <a href="{{ params.checkProgress.href | default('#') }}" class="hmrc-account-menu__link{% if params.checkProgress.active %} hmrc-account-menu__link--active{% endif %}">
        {% if language == 'cy' %}Gwirio cynnydd{% else %}Check progress{% endif %}
      </a>
    </li>

    <li>
      <button id="account-menu__main-2" class="hmrc-account-menu__link hmrc-account-icon hmrc-account-menu__link--more hmrc-account-menu__your-account" aria-haspopup="true" aria-owns="subnav-your-account">
        {% if language == 'cy' %}Eich cyfrif{% else %}Your account{% endif %}
      </button>

      <div class="hmrc-subnav" id="subnav-your-account" role="navigation" aria-labelledby="account-menu__main-2" aria-label="Your account">
        <div class="govuk-grid-column-one-third hmrc-subnav__section">
          <p class="hmrc-subnav__section__heading">
            {% if language == 'cy' %}Gosodiadau di-bapur{% else %}Paperless settings{% endif %}
          </p>

          <div>
            <a href="{{ params.paperlessSettings.href | default('#') }}" class="hmrc-subnav__paperless">
              {% if language == 'cy' %}Rheoli'ch gosodiadau di-bapur{% else %}Manage your paperless settings{% endif %}
            </a>
          </div>
        </div>

        <div class="govuk-grid-column-one-third hmrc-subnav__section">
          <p class="hmrc-subnav__section__heading">
            {% if language == 'cy' %}Manylion personol{% else %}Personal details{% endif %}
          </p>

          <div>
            <a href="{{ params.personalDetails.href | default('#') }}" class="hmrc-subnav__personal">
              {% if language == 'cy' %}Rheoli'ch manylion personol{% else %}Manage your personal details{% endif %}
            </a>
          </div>
        </div>
      </div>
    </li>

    <li>
      <a href="{{ params.signOut.href | default('#') }}" class="hmrc-account-menu__link hmrc-account-menu__sign-out">{% if language == 'cy' %}Allgofnodi{% else %}Sign out{% endif %}</a>
    </li>
  </ul>
</nav>
<!-- END ACCOUNT MENU -->
